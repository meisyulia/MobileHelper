<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_blueIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bluetooth_32"
        android:scaleType="centerInside"
        android:padding="8dp"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:id="@+id/ll_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_blueIcon"
        android:layout_centerVertical="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_blueName"
            style="@style/tv_content_left"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:text=""
            />
        <TextView
            android:id="@+id/tv_blueAddress"
            style="@style/tv_content_right"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:text=""
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"/>
    </LinearLayout>

    <View
        style="@style/view_1dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/ll_text"/>
</RelativeLayout>